<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- RecyclerView for displaying skills -->
    <TextView
        android:id="@+id/categoryAverageScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Score: 0"
        android:textSize="16sp"
        android:layout_margin="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/skillsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:clipToPadding="false" />


    <!-- Floating Action Button for adding new skills -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addSkillFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="Add Skill"
        android:src="@drawable/ic_add" />
</LinearLayout>
